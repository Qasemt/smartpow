{
  "compileOnSave": true,
  "compilerOptions": {
     // types option has been previously configured
     "types": [
      // add node as an option
      "node"
   ],
   // typeRoots option has been previously configured
   "typeRoots": [
      // add path to @types
      "node_modules/@types"
   ],
   "moduleResolution": "node",
    "outDir": "build",
    "module": "commonjs",
     "target": "es2018",
  
   
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
